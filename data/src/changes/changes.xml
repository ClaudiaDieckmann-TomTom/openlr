<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://maven.apache.org/changes/1.0.0"
          xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
    <properties>
        <title>OpenLR - data package</title>
        <author email="openlr@tomtom.com">TomTom International B.V.</author>
    </properties>
    <body>

        <!--
            template for future releases <release version="<version number>"
            date="<release date>" description="<textual description>"> <action
            dev="<developer>" type="add"> Test 1 </action> <action
            dev="<developer>" type="update"> Test 2 </action> <action
            dev="<developer>" type="fix"> Test 3 </action> <action
            dev="<developer>" type="remove"> Test 4 </action> </release>
        -->

        <release version="1.4.1" date="" description="OpenLR release 1.4.1">

        </release>


        <release version="1.4.0" date="" description="Release 1.4.0">
            <action dev="TomTom International B.V." type="update">
                Changed name of OpenLRRuntimeException to OpenLRProcessingException to avoid confusion
                about the fact that it's not of type java.lang.RuntimeException
            </action>
            <action dev="TomTom International B.V." type="add">
                Support for calculation of bounding boxes for all types of location references instead of only LRP-based
                by the LocRefBoundary utility.
            </action>
        </release>

        <release version="1.3.0" date="" description="Release 1.3.0">
            <action dev="TomTom International B.V." type="add">
                Area location support.
            </action>
        </release>

        <release version="1.2.2" date="" description="Release 1.2.2">
            <action dev="TomTom International B.V." type="add">
                Implementation of the location interface has moved to the data package.
            </action>
            <action dev="TomTom International B.V." type="add">
                Location factory has moved to the data package.
            </action>
            <action dev="TomTom International B.V." type="add">
                Location data handling has moved to the data package.
            </action>
            <action dev="TomTom International B.V." type="add">
                Add sequence number to a location reference point.
            </action>
        </release>

        <release version="1.2.1" date="2010-08-04" description="Release 1.2.1">
            <action dev="TomTom International B.V." type="update">
                use of consistent location/(raw) location reference identifier
            </action>
            <action dev="TomTom International B.V." type="add">
                add name and explanation to error code
            </action>
            <action dev="TomTom International B.V." type="update">
                remove openlr exception type and add openlr return code
            </action>
        </release>

        <release version="1.2.0" date="2010-07-01" description="Major OpenLR release 1.2.0">
            <action dev="TomTom International B.V." type="add">
                add version to location reference
            </action>
            <action dev="TomTom International B.V." type="add">
                add raw location reference interface
            </action>
            <action dev="TomTom International B.V." type="fix">
                save memory by using a pre-generated list of location types
            </action>
            <action dev="TomTom International B.V." type="add">
                add orientation and sideOfRoad interfaces for point locations
            </action>
            <action dev="TomTom International B.V." type="add">
                add location type enumeration
            </action>
            <action dev="TomTom International B.V." type="add">
                add location interface
            </action>
        </release>

        <release version="1.1.0" date="2010-02-01" description="Initial release">
            <action dev="TomTom International B.V." type="add">
                Initial release
                of the OpenLR data package.
            </action>
        </release>


    </body>
</document>
