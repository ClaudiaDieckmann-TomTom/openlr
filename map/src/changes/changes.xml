<document xmlns="http://maven.apache.org/changes/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
	<properties>
		<title>OpenLR - map package</title>
		<author email="openlr@tomtom.com">TomTom International B.V.</author>
	</properties>
	<body>

		<!-- template for future releases <release version="<version number>" date="<release 
			date>" description="<textual description>"> <action dev="<developer>" type="add"> 
			Test 1 </action> <action dev="<developer>" type="update"> Test 2 </action> 
			<action dev="<developer>" type="fix"> Test 3 </action> <action dev="<developer>" 
			type="remove"> Test 4 </action> </release> -->
        
        <release version="1.4.1" date="" description="OpenLR release 1.4.1">
		
		</release>
        
        <release version="1.4.0" date="" description="Release 1.4.0">
            <action dev="TomTom International B.V." type="update">
                Interface Node now provides a method that delivers the geo coordinate in form
                of a GeoCoordinates object.
            </action>
            <action dev="TomTom International B.V." type="update">
                Simplified return types in interfaces Line, Node and MapDatabase by removing wildcard definitions.
            </action>
            <action dev="TomTom International B.V." type="update">
                Interface Line now provides methods that deliver GeoCoordinates instead of 
                Point2D instances. The former methods getShape and getPointAlongLine still exist 
                for backwards compatibility but marked "deprecated".
            </action>
            <action dev="TomTom International B.V." type="update">
                Class GeoCoordinate changed to an interface now. The former concrete class is now represented by 
                GeoCoordinateImpl. GeoCoordinateImpl provides a factory method now that delivers an
                instance without force of handling a checked exception.
            </action>
        </release>

		<release version="1.3.0" date="" description="Release 1.3.0">
			<action dev="TomTom International B.V." type="add">
				Add area location
				support.
			</action>
		</release>

		<release version="1.2.2" date="" description="Release 1.2.2">
			<action dev="TomTom International B.V." type="add">
				Add tool for
				creating kml out of mocked map database.
			</action>
			<action dev="TomTom International B.V." type="add">
				Mock map database
				with xml configuration.
			</action>
			<action dev="TomTom International B.V." type="add">
				Add comparator
				for FRC types.
			</action>
			<action dev="TomTom International B.V." type="update">
				Access next and
				previous FRC type.
			</action>
		</release>

		<release version="1.2.1" date="2010-08-04" description="Release 1.2.1">
			<action dev="TomTom International B.V." type="update">
				Documentation.
			</action>
		</release>

		<release version="1.2.0" date="2010-07-01" description="Major OpenLR release 1.2.0">
			<action dev="TomTom International B.V." type="add">
				Add map loader
				interface (move from MapViewer)
			</action>
			<action dev="TomTom International B.V." type="update">
				Change method
				returns from set to iterator
			</action>
			<action dev="TomTom International B.V." type="add">
				Add iterator
				helper class
			</action>
			<action dev="TomTom International B.V." type="add">
				Add methods for
				getting the total number of nodes and lines
			</action>
			<action dev="TomTom International B.V." type="fix">
				Reduce memory
				consumption for enums
			</action>
			<action dev="TomTom International B.V." type="fix">
				improve runtime
				of GeomUtils
			</action>
			<action dev="TomTom International B.V." type="add">
				add coordinate
				bounds check
			</action>
		</release>

		<release version="1.1.0" date="2010-02-01" description="Major OpenLR release 1.1.0">
			<action dev="TomTom International B.V." type="add">
				MapDatabase
				interface extended to access all nodes and lines (optional).
			</action>
			<action dev="TomTom International B.V." type="add">
				MapDatabase
				interface extended to access get bounding box (optional).
			</action>
		</release>

		<release version="1.0.0" date="2009-11-09"
			description="Initial release - reference implementation">
			<action dev="TomTom International B.V." type="add">
				Initial release
				of the OpenLR map package.
			</action>
		</release>

	</body>
</document>
